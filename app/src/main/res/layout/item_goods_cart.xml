<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        >
        <CheckBox
            android:id="@+id/rb_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:button="@drawable/radio_rx_select_style"
            android:layout_margin="10dp"
            />

        <ImageView
            android:layout_toRightOf="@id/rb_select"
            android:id="@+id/iv_icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            android:background="@mipmap/no_data_80"
            />
        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:text="删除"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:textColor="#ff0000"
            />

        <TextView
            android:layout_toLeftOf="@id/tv_delete"
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:ellipsize="end"
            android:textSize="12sp"
            android:paddingRight="10dp"
            android:textColor="@color/black"
            android:layout_alignTop="@id/iv_icon"
            android:layout_toRightOf="@id/iv_icon"
            android:text="魅可（M.A.C）口红mac头女士唇膏3g Sweet sakura 甜蜜樱花（润泽）"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignBottom="@id/iv_icon"
            android:layout_toRightOf="@id/iv_icon"
            android:layout_toLeftOf="@id/tv_delete">
            <LinearLayout
                android:id="@+id/ll_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/tv_currency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#ff0000"
                    android:text="￥"
                    />
                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:background="@null"
                    android:textColor="#ff0000"
                    android:text="198"
                    />
                <TextView
                    android:id="@+id/point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="#ff0000"
                    android:text="."
                    />
                <TextView
                    android:id="@+id/tv_point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#ff0000"
                    android:text="88"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="bottom"
                android:paddingRight="10dp"
                android:layout_gravity="bottom">
                <ImageView
                    android:id="@+id/iv_sub"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:background="@mipmap/mall_cart_sub"/>
                <TextView
                    android:id="@+id/tv_number"
                    android:layout_width="30dp"
                    android:layout_height="22dp"
                    android:background="@mipmap/mall_cart_txt"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:text=""/>
                <ImageView
                    android:id="@+id/iv_add"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:background="@mipmap/mall_cart_add"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>