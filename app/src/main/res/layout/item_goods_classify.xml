<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">


    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginRight="15dp"
        android:layout_centerVertical="true"
        android:background="@mipmap/no_data_80"
        />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:ellipsize="end"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:layout_alignTop="@id/iv_icon"
            android:layout_toRightOf="@id/iv_icon"
            android:text="魅可（M.A.C）口红mac头女士唇膏3g Sweet sakura 甜蜜樱花（润泽）"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignBottom="@id/iv_icon"
        android:layout_toRightOf="@id/iv_icon"
        >
        <TextView
            android:id="@+id/tv_currency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#ff0000"
            android:text="￥"
            />
        <TextView
            android:id="@+id/tv_price"
            android:layout_toRightOf="@id/tv_currency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:background="@null"
            android:textColor="#ff0000"
            android:layout_alignBottom="@id/tv_currency"
            android:text="198"
            />
        <TextView
            android:id="@+id/point"
            android:layout_toRightOf="@id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#ff0000"
            android:layout_alignBottom="@id/tv_price"
            android:text="."
            />
        <TextView
            android:id="@+id/tv_point"
            android:layout_toRightOf="@id/point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#ff0000"
            android:layout_alignBottom="@id/point"
            android:text="88"
            />
    </LinearLayout>



</RelativeLayout>