<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <com.lsl.cymall.view.TitleBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tbText="个人中心"/>
        <!-- TODO: Update blank fragment layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:baselineAligned="false"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/rl_my_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingBottom="15dp"
                android:paddingTop="15dp">

                <ImageView
                    android:id="@+id/iv_my_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20.0dip"
                    android:src="@mipmap/mine_indent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="15.0dip"
                    android:layout_toEndOf="@+id/iv_my_order"
                    android:layout_toRightOf="@+id/iv_my_order"
                    android:text="我的订单"
                    android:textColor="@color/dark_gray"
                    android:textSize="15.0sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15.0dip"
                    android:layout_alignParentRight="true"
                    android:text="全部订单"
                    android:textSize="15.0sp"
                    android:drawablePadding="15dp"
                    android:drawableRight="@mipmap/btn_go_gray"/>

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/background"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white"
                android:padding="15dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:drawableTop="@mipmap/obligation"
                    android:drawablePadding="15dp"
                    android:text="待付款"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:drawableTop="@mipmap/wait_for_receiving"
                    android:drawablePadding="15dp"
                    android:text="待收货"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:drawableTop="@mipmap/sales_return"
                    android:drawablePadding="15dp"
                    android:text="退款/退货"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:drawableTop="@mipmap/bill"
                    android:drawablePadding="15dp"
                    android:text="还款账单"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/background"/>
            <RelativeLayout
                android:id="@+id/rl_my_history"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingBottom="15dp"
                android:paddingTop="15dp">

                <ImageView
                    android:id="@+id/iv_my_history"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20.0dip"
                    android:src="@mipmap/mine_browsing_history" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="15.0dip"
                    android:layout_toEndOf="@+id/iv_my_history"
                    android:layout_toRightOf="@+id/iv_my_history"
                    android:text="浏览历史"
                    android:textColor="@color/dark_gray"
                    android:textSize="15.0sp" />
                <TextView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15.0dip"
                    android:layout_alignParentRight="true"
                    android:text="浏览历史"
                    android:textSize="15.0sp"
                    android:drawablePadding="15dp"
                    android:drawableRight="@mipmap/btn_go_gray"/>

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/background"/>
            <RelativeLayout
                android:id="@+id/rl_my_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingBottom="15dp"
                android:paddingTop="15dp">

                <ImageView
                    android:id="@+id/iv_my_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20.0dip"
                    android:src="@mipmap/mine_site" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="15.0dip"
                    android:layout_toEndOf="@+id/iv_my_address"
                    android:layout_toRightOf="@+id/iv_my_address"
                    android:text="地址管理"
                    android:textColor="@color/dark_gray"
                    android:textSize="15.0sp" />
                <TextView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15.0dip"
                    android:layout_alignParentRight="true"
                    android:text="地址管理"
                    android:textSize="15.0sp"
                    android:drawablePadding="15dp"
                    android:drawableRight="@mipmap/btn_go_gray"/>

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
